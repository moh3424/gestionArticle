{% block stylesheets %}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
{% endblock %}

{{ form_start(form) }}
<div class="form-group">
    {{ form_row(form.email, {'label': 'Adresse email','attr': {'placeholder': "Votre Email", 'class': "form-control"}})}}

</div>
<div class="form-group">

    {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': "Votre username", 'class': "form-control"}})
    }}

</div>
<div class="form-group">

    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': "Veuillez saisir votre mot de passe", 'class': "form-control"}})
    | raw}}

</div>
<div class="form-group">

    {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe', 'attr': {'placeholder': "Veuillez confirmer votre mot de passe", 'class': "form-control"}})}}

</div>
<button type="submit" class="btn btn-primary mb-2">Enregistrer</button>

{{ form_end(form) }}




