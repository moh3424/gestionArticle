{% extends 'base/base.html.twig' %}

{% block body %}
{% include 'base/_header.html.twig' %}
<section id="banner">
    <div class="parallax-container">
        <div class="parallax">
            <img src="img/blog-header-bg.jpg">
        </div>
        <div class="overlay-header">
        </div>
        <div class="overlay-content blog-head">
            <div class="container">
                <h1 class="header-title">{{ article.title }}</h1>
            </div>
        </div>
    </div>
</section>
<section id="blog-details">
    <div class="container">
        <div class="row">
            <div class="col s12 m8 l8">
                <div class="blog-content blog-archive">
                    <div class="blog-post">
                        <div class="card">
                            <div class="card-image">
                                <img src="{{ asset('assets/images/blog2.jpg') }}">
                            </div>
                            <div class="card-content blog-post-content">
                                <h2>{{ article.title }}</h2>
                                <div class="meta-media">
                                    <div class="single-meta">
                                        Posté par <a href="#">MedAdmin</a>
                                    </div>
                                    <div class="single-meta">
                                        Ecrit le {{ article.createdAt|date('d/m/Y') }} à
                                        {{ article.createdAt|date('H:i') }} dans la catégorie
                                        : <a href="#">{{article.category.title}}</a>
                                    </div>
                                </div>
                                {{ article.introduction| raw }}
                            </div>
                            <hr>
                            <p>{{ article.content | raw }}</p>
                            <div class="card-action">
                                <a class="post-comment" href="#comments"><i
                                        class="material-icons">comment</i><span>{{article.comments|length}}</span></a>
                                <a class="readmore-btn" href="{{ path('home') }}">Retour vers les articles</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col s12 m4 l4">
                <aside class="sidebar">
                    <!-- Start Single Sidebar -->
                    <div class="single-sidebar">
                        <h3>Recent News</h3>
                        <!-- Single Recent News -->
                        <div class="recent-news">
                            <div class="recent-img">
                                <a href="blog-single.html"><img src="img/blog1.jpg" alt="img"></a>
                            </div>
                            <div class="recent-body">
                                <h4><a href="blog-single.html">Recent News Title</a></h4>
                                <p>The point of using Lorem Ipsum is that it has a more-or-less normal.</p>
                            </div>
                        </div>
                        <!-- Single Recent News -->
                        <div class="recent-news">
                            <div class="recent-img">
                                <a href="blog-single.html"><img src="img/blog2.jpg" alt="img"></a>
                            </div>
                            <div class="recent-body">
                                <h4><a href="blog-single.html">Recent News Title</a></h4>
                                <p>The point of using Lorem Ipsum is that it has a more-or-less normal.</p>
                            </div>
                        </div>
                        <!-- Single Recent News -->
                        <div class="recent-news">
                            <div class="recent-img">
                                <a href="blog-single.html"><img src="img/blog3.jpg" alt="img"></a>
                            </div>
                            <div class="recent-body">
                                <h4><a href="blog-single.html">Recent News Title</a></h4>
                                <p>The point of using Lorem Ipsum is that it has a more-or-less normal.</p>
                            </div>
                        </div>
                    </div>
                    <!-- Start Single Sidebar -->
                    <div class="single-sidebar">
                        <h3>Categories</h3>
                        <!-- Single Category -->
                        <ul>
                            <li class="cat-item"><a href="#">Sport</a></li>
                            <li class="cat-item"><a href="#">Musique</a></li>
                            <li class="cat-item"><a href="#">Science</a></li>
                            <li class="cat-item"><a href="#">Politique</a></li>
                            <li class="cat-item"><a href="#">Santé</a></li>
                        </ul>
                    </div>
                    <!-- Start Single Sidebar -->

                    <!-- Start Single Sidebar -->

                    <!-- Start Single Sidebar -->

                </aside>

            </div>

        </div>
        <h2 id="comments">{{ article.comments | length }} commentaires :</h2>
        {% for comment in article.comments %}
        <div class="blog-content blog-archive">
            <h3>{{comment.author}}</h3>
            <!-- Single Category -->
            <p>{{comment.createdAt|date('d/m/Y à H:i')}}</p>
            <p>{{comment.content|raw}}</p>

        </div>
        {% endfor %}
    </div>

</section>
{% if app.user %}
<section>
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="blog-content blog-archive">
                    <div class="blog-area">
                        <div class="row center">
                            <!-- Start single blog post -->
                            <div class="col s12 m4 l4">
                                <h3>Votre Commentaire !!!</h3>
                            </div>
                            <div class="col s12 m8 l6">
                                <div class="blog-post">
                                    <div class="card">
                                        {% include 'blog/_formcomment.html.twig' %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% else %}
<section>
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="blog-content blog-archive">
                    <div class="blog-area">
                        <div class="row center">
                            <!-- Start single blog post -->

                            <div class="col s12 m8 l6">
                                <div class="blog-post">
                                    <div class="card">
                                        <h3>Vous ne pouvez pas commenter si vous n'êtes pas connecté</h3>
                                        <a class="readmore-btn" href="{{ path('security_login') }}">Connexion</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


{% endif %}
{% endblock %}