{{ form_start(formArticle) }}
<div class="form-group">
    {{ form_row(formArticle.title, {'attr': {'placeholder': "Titre de l'article", 'class': "form-control"}})}}

</div>
<div class="form-group">

    {{ form_row(formArticle.category, {'attr': {'placeholder': "Titre de l'article", 'class': "form-control"}}) }}

</div>
<div class="form-group">

    {{ form_row(formArticle.content, {'attr': {'placeholder': "Contenu de l'article", 'class': "form-control"}}) | raw}}

</div>
<div class="form-group">

    {{ form_row(formArticle.image, {'attr': {'placeholder': "TUrl de l'image de l'article"}})}}

</div>

<button type="submit" class="btn btn-primary mb-2">Confirmer</button>

{{ form_end(formArticle) }}

